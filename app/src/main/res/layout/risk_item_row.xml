<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:padding="8dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/rowAppName"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/rowAppImage"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:text="Test"/>
    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:id="@+id/rowAppImage"
            tools:srcCompat="@tools:sample/avatars" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/rowAppDescription" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rowAppName"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="0dp"
            android:text="Test Description"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/hr_rounded_corner"
            android:padding="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@android:color/white"
            android:id="@+id/rowCategoryOne" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowAppDescription" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/hr_rounded_corner"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:id="@+id/rowCategoryTwo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowAppDescription" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/rowCategoryOne"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/hr_rounded_corner"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:id="@+id/rowCategoryThree" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowAppDescription" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/rowCategoryTwo"/>

